    <div class="main_container container-sm">
        <div class="book_detail_container">
            <div class="book_cover_container">
                <img src="<%= book.images %>" class="book_cover" alt="book cover">
                <div>
                    <p class="book_title">
                        <%= book.title%>
                    </p><br>
                    <p class="book_author">Author: <%= book.author%>
                    </p><br>
                    <p class="book_category">Category: <%= book.categories%>
