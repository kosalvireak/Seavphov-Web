<% layout('layout/boilerplate') %>
    <div class="container-sm">
        <div class="row">
            <div class="book_detail_container  d-flex flex-column flex-wrap col-12 col-md-8 p-0 rounded-7">
                <div class="book_cover_container">
                    <img src="<%= book.images %>" class="book_cover" alt="book cover">
                    <div>
                        <p class="book_title">
                            <%= book.title%>
                        </p><br>
                        <p class="book_author">Author: <%= book.author%>
                        </p><br>
                        <p class="book_category">Category: <%= book.categories%>
                        </p>
                        <p class="book_condition">Book Condition: <%= book.condition%>
                        </p>
                    </div>
                </div>
                <p class="description">Description</p>
                <div class="book_description_container">
                    <p>
                        <%= book.descriptions %>
                    </p>
                </div>
            </div>
            <div class=" col-12 p-0 col-md-4 ps-md-3 d-flex flex-column rounded-7  ">
                <div class="user_profile_container bg-seavphov rounded-7">
